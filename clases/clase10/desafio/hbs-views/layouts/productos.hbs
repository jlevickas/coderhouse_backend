<div>
    <h1>Productos</h1>
    {{#if hayProductos}}
    <table>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Imagen</th>
        </tr>
        {{#each productos}}
        <tr>
            <td>{{this.producto}}</td>
            <td>{{this.precio}}</td>
            <td><img src="{{this.imagen}}" width="20" height="20"></td>
        </tr>
        {{/each}}
    </table>
    {{else}}
    <p>No hay productos</p>
    {{/if}}
</div>